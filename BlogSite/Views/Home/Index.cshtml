@model List<BlogSite.Data.CONTENTS>

    

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<style>
    

       
</style>
<div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-8">
        <h2 style="font-family:'Comic Sans MS'" class="my-4 font-weight-bold"> GÜNDEMDEKİLER </h2>
        @foreach (var item in Model)
        {
            <div class="card mb-4 " id="@item.ID" style="width:34rem; height:40rem;">
                @if (item.CONTENTFILES.Count > 0)
                {
                    <img class="img-fluid" src="~/UploadImages/@item.CONTENTFILES.FirstOrDefault().PATH" alt="Card image cap">

                }
            <div class="card-body" id="@item.ID">


                <h2 class="card-title">@item.HEAD</h2>

                @if (item.CONTENTTEXT.Length > 200)
                {
                    <p class="card-text">@item.CONTENTTEXT.Substring(0, 200)</p>
                }
                else
                {
                    <p class="card-text">@item.CONTENTTEXT</p>
                }

                <a class="btn btn-block btn-info" href=@Url.Action("devaminioku",new {id=item.ID })>Devamını Oku </a>

            </div>
                <div class="card-footer text-muted">
                    Posted on January 1, 2020 by
                    <a href="#">Start Bootstrap</a>
                </div>
            </div>

        }
      

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="~/Views/Home/Index.cshtml">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>
    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">
        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Ara</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-append">
                        <button class="btn btn-secondary" type="button">Git!</button>
                    </span>
                </div>
            </div>
        </div>
        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Kategoriler</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
